@page
@model proiect_mari_claudiu.Pages.Masini.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Masina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Masina.Denumire" class="control-label"></label>
                <input asp-for="Masina.Denumire" class="form-control" />
                <span asp-validation-for="Masina.Denumire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Masina.Pret" class="control-label"></label>
                <input asp-for="Masina.Pret" class="form-control" />
                <span asp-validation-for="Masina.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Masina.An_Fabricatie" class="control-label"></label>
                <input asp-for="Masina.An_Fabricatie" class="form-control" />
                <span asp-validation-for="Masina.An_Fabricatie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Masina.FurnizorID" class="control-label">Nume furnizor</label>
                <select asp-for="Masina.FurnizorID" class="form-control" asp-items="ViewBag.FurnizorID">
                </select>
                <span asp-validation-for="Masina.FurnizorID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Masina.ModelID" class="control-label">Model</label>
                <select asp-for="Masina.ModelID" class="form-control" asp-items="ViewBag.ModelID">
                </select>
                <span asp-validation-for="Masina.ModelID" class="text-danger"></span>
            </div>

             <div class="form-group">
                <div class="table">
                    <table>
                            <tr>
                                @{
                        int cnt = 0;
        foreach (var cat in Model.AssignedTipDataList)
                  {
                 if (cnt++ % 3 == 0)
                  {
                @:</tr><tr>
                  }
                @:<td>
                   <input type="checkbox"
                       name="selectedCategories"
                      value="@cat.TipID"
                      @(Html.Raw(cat.Assigned ?
                           "checked=\"checked\"" : "")) />
                           @cat.TipID @: @cat.Nume
                           @:</td>
                                  }
                       @:</tr>
                          }
                          </table>
                    </div>
                  </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
